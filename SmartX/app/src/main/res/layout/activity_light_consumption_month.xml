<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".LightConsumptionMonthActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/consumption_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Consumption"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/month_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/consumption_title"
        app:layout_constraintTop_toBottomOf="@+id/consumption_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/Month"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_drop_down"
            app:tint="@android:color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/info_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_info"
        app:tint="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/settings_icon"
        app:layout_constraintTop_toTopOf="@+id/consumption_title" />

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_settings"
        app:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/consumption_title" />

    <!-- Month Navigator -->
    <HorizontalScrollView
        android:id="@+id/month_navigator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/month_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/jan_button"
                style="@style/MonthTextStyle"
                android:text="Jan"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/feb_button"
                style="@style/MonthTextStyle"
                android:text="Feb" />

            <TextView
                android:id="@+id/mar_button"
                style="@style/MonthTextStyle"
                android:text="Mar" />

            <TextView
                android:id="@+id/apr_button"
                style="@style/MonthTextStyle"
                android:text="Apr" />

            <TextView
                android:id="@+id/may_button"
                style="@style/MonthTextStyle"
                android:text="May" />

            <TextView
                android:id="@+id/jun_button"
                style="@style/MonthTextStyle"
                android:text="Jun" />

            <TextView
                android:id="@+id/jul_button"
                style="@style/MonthTextStyle"
                android:text="Jul" />

            <TextView
                android:id="@+id/aug_button"
                style="@style/MonthTextStyle"
                android:text="Aug" />

            <TextView
                android:id="@+id/sep_button"
                style="@style/MonthTextStyle"
                android:text="Sep" />

            <TextView
                android:id="@+id/oct_button"
                style="@style/MonthTextStyle"
                android:text="Oct" />

            <TextView
                android:id="@+id/nov_button"
                style="@style/MonthTextStyle"
                android:text="Nov" />

            <TextView
                android:id="@+id/dec_button"
                style="@style/MonthTextStyle"
                android:text="Dec" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Consumption Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/consumption_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#1C1C1E"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/month_navigator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/icon_light"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lightbulb2_icon" />
            
            <TextView
                android:id="@+id/month_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/icon_light"
                android:layout_marginStart="8dp"
                android:text="JANUARY"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/month_title"
                android:layout_alignStart="@+id/month_title"
                android:text="Electricity Consumption"
                android.textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/php_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="P 0"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/kwh_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/php_value"
                android:layout_alignEnd="@+id/php_value"
                android:text="0 kwh"
                android:textColor="@android:color/darker_gray"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/month_chart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/consumption_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/homepage_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Homepage"
            android:src="@drawable/ic_homepage"
            android:scaleType="fitCenter"
            android:padding="8dp"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/light_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Light"
            android:src="@drawable/lightbulb2_icon"
            android:scaleType="fitCenter"
            android:padding="8dp"
            app:tint="#FFA500" />

        <ImageButton
            android:id="@+id/user_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="User"
            android:src="@drawable/ic_user"
            android:scaleType="fitCenter"
            android:padding="8dp"
            app:tint="@android:color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
